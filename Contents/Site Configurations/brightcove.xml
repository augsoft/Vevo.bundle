<?xml version="1.0" encoding="UTF-8"?>
<site site="http://x.brightcove.com/plex"
	    plugin="http://x.brightcove.com/plex/swf/PlexPlayer.swf"
			initialState="playing"
			version="1.0">

	<crop x="0" y="0" width="640" height="360"/>


	<seekbar type="simple">
		<start x="65" y="377" />
		<end   x="574" y="377" />
		<played>
				<color rgb="a3b840" />
		</played>
	</seekbar>
	

	<!-- PLAYING -->
	<state name="playing">
		
		<!-- Click to pause -->
		<event>
			<condition>
				<command name="pause" />
			</condition>
			<action>
				<click x="320" y="180" />
				<goto state="paused" />
			</action>
		</event>

		<!-- Video ends -->
		<event>
			<condition>
				<and>
					<color x="0" y="377" rgb="009999" />
				</and>
			</condition>
			<action>
				<goto state="end" />
			</action>
		</event>
		
	</state>
	
	<!-- PAUSED -->
	<state name="paused">		
		<!-- Wait for play command -->
		<event>
			<condition>
			 	<command name="play" />
			</condition>
			<action>
				<click x="320" y="180" />
			 	<goto state="playing" />
			</action>
		</event>
	</state>	
	
</site>